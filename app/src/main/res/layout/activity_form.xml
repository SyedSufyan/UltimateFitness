<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#555"
    tools:context="com.cs442.uf.myapplication.FormActivity"
    android:id="@+id/">


    <TextView
        android:id="@+id/tWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter your Details Below"
        android:textColor="#FFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tHeight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tWeight"
        android:layout_below="@+id/tWeight"
        android:layout_marginTop="75dp"
        android:text="Height : "
        android:inputType="number"
        android:textColor="#FFF"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="left|top" />
    <EditText
        android:id="@+id/eHeight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tHeight"
        android:layout_alignBottom="@+id/tHeight"
        android:layout_alignLeft="@+id/tHeight"
        android:layout_marginLeft="-50dp"
        android:hint="in cm"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="#FFF"
        android:layout_gravity="center_horizontal|top" />

    <TextView
        android:id="@+id/tWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tSex"
        android:layout_below="@+id/tSex"
        android:layout_marginTop="105dp"
        android:text="Weight:"
        android:textColor="#FFF"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/eWeight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tWeight"
        android:layout_below="@+id/eAge"
        android:layout_marginLeft="75dp"
        android:hint="in lb"
        android:inputType="number"
        android:layout_marginTop="95dp"
        android:layout_toRightOf="@+id/tWeight"
        android:ems="10"
        android:textColor="#FFF"
        android:layout_gravity="left|top" />

    <TextView
        android:id="@+id/tAge"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="Age: "
        android:inputType="number"
        android:textColor="#FFF"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="left|top" />

    <EditText
        android:id="@+id/eAge"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tAge"
        android:layout_marginLeft="75dp"
        android:hint="years"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="#FFF"
        android:layout_gravity="left|top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Waist Circumference :"
        android:layout_marginTop="-60dp"
        android:id="@+id/tWaistC"
        android:textColor="#FFF"
        android:layout_gravity="left|center_vertical" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/eWaistC"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="60dp"
        android:textColor="#FFF"
        android:hint="in Inches"
        android:layout_gravity="center" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wrist Circumference :"
        android:layout_marginTop="-30dp"
        android:id="@+id/tWristC"
        android:textColor="#FFF"
        android:layout_gravity="left|center_vertical" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/eWristC"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="60dp"
        android:textColor="#FFF"
        android:hint="in Inches"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hip Circumference :"
        android:layout_marginTop="0dp"
        android:id="@+id/tHipC"
        android:textColor="#FFF"
        android:layout_gravity="left|center_vertical" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/eHipC"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="60dp"
        android:textColor="#FFF"
        android:hint="in Inches"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Forearm Circumference :"
        android:layout_marginTop="30dp"
        android:id="@+id/tForearmC"
        android:textColor="#FFF"
        android:layout_gravity="left|center_vertical" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/eForearmC"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:textColor="#FFF"
        android:hint="in Inches"
        android:layout_gravity="center" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="0dp"
        android:text="Submit"
        android:id="@+id/bSubform"
        android:layout_gravity="center" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:id="@+id/rg">

        <TextView
            android:id="@+id/tSex"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tSex"
            android:layout_below="@+id/tWelcome"
            android:layout_marginTop="45dp"
            android:text="Gender: "
            android:textColor="#FFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="left|top" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-28dp"
            android:layout_marginLeft="-70dp"
            android:textColor="#FFF"
            android:text="Male"
            android:id="@+id/rMale"
            android:layout_gravity="center_horizontal|top" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-32dp"
            android:layout_marginLeft="0dp"
            android:textColor="#FFF"
            android:text="Female"
            android:id="@+id/rFemale"
            android:layout_gravity="center_horizontal|top" />



    </RadioGroup>

</FrameLayout>
